  "scripts": {
    "format:base": "npx prettier \"{public,src}/**/*.{html,json,ts,tsx,yaml,scss}\"",
    "format:check": "npm run format:base -- --check",
    "format": "npm run format:base -- --write",
    "analyze": "npx source-map-explorer build/static/js/main.*",
    "start": "react-scripts --max-old-space-size=2048 start",
    "build": "react-scripts --max-old-space-size=2048 build"
  },
  "browserslist": {
    "development": [
      "last 1 chrome version",
      "last 1 firefox version"
    ],
    "production": [
      ">1%",
      "last 5 versions",
      "Firefox ESR"
    ]
  },
